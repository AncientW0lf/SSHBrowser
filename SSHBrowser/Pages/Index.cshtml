@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="input-group mb-3">
    <input id="pathInput" type="text" class="form-control" placeholder="Path" aria-label="Path"
        value="@Model.DirPath"></input>
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" onclick="goToPath()">&#62;</button>
    </div>
</div>

@for (int i = 0; i < Model.Files.Length; i++)
{
    <p>@Model.Files[i]</p>
}

@section Scripts {
<script src="~/js/index.js"></script>
}